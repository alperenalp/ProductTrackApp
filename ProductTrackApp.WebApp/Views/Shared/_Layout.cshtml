<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> Product Tracking Application </title>
    <!-- Font Awesome Icons -->
    <link href="~/adminlte-3.0.4-theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/adminlte-3.0.4-theme/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                </li>
            </ul>
            <!-- SEARCH FORM -->
            @*            <form class="form-inline ml-3">
            <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
            <i class="fas fa-search"></i>
            </button>
            </div>
            </div>
            </form>*@
            <!-- Right navbar links -->
            <ul class="nav nav-pills nav-sidebar flex-column ml-auto" data-widget="treeview" role="menu" data-accordion="false">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/Users/Logout" class="nav-link">
                            <p>
                                Logout, @User.Identity.Name
                            </p>
                            <i class="nav-icon fas fa-lock"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/Users/Login" class="nav-link">
                            <i class="nav-icon fas fa-user"></i>
                            <p>
                                Login
                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                @*<img src="~/AdminLTE-3.0.4-theme/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                style="opacity: .8">*@
                <i class="nav-icon fas fa-home"></i>
                <span class="brand-text font-weight-light">Product Tracking App</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (true)//User.Identity.IsAuthenticated
                        {
                            if (true) //User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "Admin"
                            {
                                <li class="nav-item">
                                    <a href="/Requests/GetAllRequests" class="nav-link">
                                        <i class="nav-icon fas fa-clipboard"></i>
                                        <p>
                                            Product Requests
                                        </p>
                                    </a>
                                </li>
                            }
                            //@User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.PrimarySid).Value
                            if (true)//User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "Employee"
                            {
                                <li class="nav-item">
                                    <a href="/Products/AddProduct" class="nav-link">
                                        <i class="nav-icon fas fa-notes-medical"></i>
                                        <p>
                                            Add Product
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Products/GetAllProducts" class="nav-link">
                                        <i class="nav-icon fas fa-clipboard-list"></i>
                                        <p>
                                            Product List
                                        </p>
                                    </a>
                                </li>
                            }

                            if (true)//User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "User"
                            {
                                <li class="nav-item">
                                    <a href="/Requests/AddProductRequest" class="nav-link">
                                        <i class="nav-icon fas fa-cart-plus"></i>
                                        <p>
                                            Add Product Request
                                        </p>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2023 <a href="#">Alperen</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminLTE-3.0.4-theme/dist/js/adminlte.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
