@model IEnumerable<OrderDisplayVM>

@{
    ViewData["Title"] = "GetAllOrders";
}


<div class="row">
    <div class="col-md-12 p-5">
        <h4 class="text-center mb-5"><b>Orders</b></h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </th>
                    <th class="text-center">
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEmail)
                        </td>
                        <td class="d-flex justify-content-around">
                            <form asp-action="ConfirmOrder">
                                <input hidden class="form-control" name="id" value="@item.Id" />
                                <input type="submit" value="Confirm Order" class="btn btn-success" />
                            </form>
                            <form asp-action="RejectOrder">
                                <input hidden class="form-control" name="id" value="@item.Id" />
                                <input type="submit" value="Reject Order" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>